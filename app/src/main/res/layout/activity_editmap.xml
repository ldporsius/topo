<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="porsius.nl.topo.play.PlayActivityLeaflet">

    <EditText
        android:id="@+id/editLocText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:focusable="false"/>

    <WebView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editLocText"
        android:focusable="true"
        android:focusableInTouchMode="true">

    </WebView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/save8"
        android:scaleType="centerInside"
        android:id="@+id/editButtonSave"
        android:layout_above="@+id/webview"
        android:layout_alignParentRight="true"
         />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/marker_gray"
        android:scaleType="centerInside"
        android:id="@+id/editButtonNew"
        android:layout_toLeftOf="@+id/editButtonSave"
        android:layout_above="@+id/webview"
        />

</RelativeLayout>
